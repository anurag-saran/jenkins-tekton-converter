{
  "pipeline_type": "Declarative",
  "agent": {
    "type": "any"
  },
  "environment": {
    "NODE_HOME": "/usr/local/node"
  },
  "parameters": [],
  "stages": [
    {
      "name": "Checkout",
      "agent": {
        "type": "any"
      },
      "environment": {},
      "when": null,
      "steps": [
        {
          "type": "git",
          "arguments": "https://github.com/your-repository/node-app.git",
          "script_content": ""
        }
      ]
    },
    {
      "name": "Build",
      "agent": {
        "type": "any"
      },
      "environment": {},
      "when": null,
      "steps": [
        {
          "type": "script",
          "script_content": "sh 'npm install'",
          "arguments": []
        }
      ]
    },
    {
      "name": "Test",
      "agent": {
        "type": "any"
      },
      "environment": {},
      "when": null,
      "steps": [
        {
          "type": "script",
          "script_content": "sh 'npm test'",
          "arguments": []
        }
      ]
    },
    {
      "name": "Deploy",
      "agent": {
        "type": "any"
      },
      "environment": {},
      "when": null,
      "steps": [
        {
          "type": "script",
          "script_content": "sh 'npm run deploy:staging'",
          "arguments": []
        }
      ]
    },
    {
      "name": "Cleanup",
      "agent": {
        "type": "any"
      },
      "environment": {},
      "when": null,
      "steps": [
        {
          "type": "echo",
          "script_content": "Cleaning up resources..."
        }
      ]
    }
  ],
  "post": {
    "always": [
      {
        "type": "echo",
        "script_content": "Pipeline completed!"
      }
    ],
    "success": [
      {
        "type": "echo",
        "script_content": "Deployment to staging successful!"
      }
    ],
    "failure": [
      {
        "type": "echo",
        "script_content": "Pipeline failed! Check the logs for errors."
      }
    ]
  }
}